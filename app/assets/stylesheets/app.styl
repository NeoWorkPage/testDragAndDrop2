// import mixins
@import 'mixins/fonts'
@import 'mixins/resolutions'

// import stuff
@import 'prepare/reset'
@import 'fonts/web_serveroff'
@import "blocks/index"
@import "blocks/load"
@import "blocks/list"
@import "blocks/button"
@import "blocks/form"
body {
  font-family 'WebServeroff'
  width 100%
  height 100%
  min-width:1280px
}
* {
  box-sizing: border-box;
}

.title{
  font-size 30px
}

.dn{
  display none!important
}

.popup{
  position fixed
  display: flex
  justify-content: center
  width: 100%
  height: 100%
  top: 0px
  left: 0px
  align-items center
  background-color rgba(0, 0, 0, 0.5)
  &_modal{
    line-height:  45px
    font-family: 'Avenir', Helvetica, Arial, sans-serif;
    font-size 18px
    padding: 20px
    color: #464342
    background-color white
    top: 50%
    text-align center
    z-index: 20
    box-shadow 0px 0px 4px 2px rgba(0, 0, 0, 0.2)
  }
}


// apply media queries
apply_media_cache()
