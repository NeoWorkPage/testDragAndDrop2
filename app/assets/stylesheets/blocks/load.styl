.load{
  width:30%;
  flex: 1 30%;
  height: 400px;
  border: 5px dashed #4a4a4a;
  border-radius: 5px;
  transition .5s
  margin-right: 40px
  &:hover{
    background-color: rgba(107, 102, 100, 0.2);
  }
  &__text{
    display: flex
    flex-direction column
    justify-content center
    height: 100%;
    cursor: pointer;
    line-height: 20px
  }
}

@media(max-width: 1580px){
  .load{
    width: 100px
    flex: 100px
    .load__text{
      width: 100%
      padding: 60px
      line-height: 25px
    }
  }
  .form_button{
    width: 280px
    margin-bottom: 10px
  }

}
